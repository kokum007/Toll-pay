<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#29a348"
    android:paddingTop="20dp">


    <TextView
        android:layout_marginTop="10sp"
        android:id="@+id/detail_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="10sp"
        android:text="Fill All the Details..."
        android:background="@drawable/round_corner"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/regEmail"
            android:layout_width="283dp"
            android:layout_height="63dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <EditText
            android:id="@+id/regPassword"
            android:layout_width="283dp"
            android:layout_height="63dp"
            android:layout_marginTop="2dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:padding="1sp"
            android:text="RFID Card Number:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/rfid_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start"
            android:hint="Type your card number"
            android:inputType="textPassword"
            android:padding="5sp"
            android:textSize="24sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:padding="1sp"
            android:text="Number Plate:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/num_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start"
            android:hint="(Ex:ABC1234)"
            android:inputType="textPassword"
            android:padding="8sp"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="1sp"
            android:text="Your Name:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/com_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start"
            android:hint="(If vehicle belongs to a Company)"
            android:inputType="textPassword"
            android:padding="8sp"
            android:textSize="24sp" />




        <Button
            android:id="@+id/add_3"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/black"
            android:padding="10sp"
            android:text="Add another vehicle"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn"
            android:layout_width="55dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8sp"
            android:layout_marginBottom="6sp"
            android:backgroundTint="#018037"
            android:padding="1dp"
            android:text="Next"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="54dp"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />



    </LinearLayout>


</LinearLayout>