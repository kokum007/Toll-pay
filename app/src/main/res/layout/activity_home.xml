<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    tools:context=".home"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#E0FFFF"
        android:id="@+id/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E0FFFF"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_credit"
                android:layout_width="350dp"
                android:layout_height="200dp"
                app:cardBackgroundColor="#2E8B57"
                app:cardCornerRadius="20dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:src="@drawable/logo_1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/antic"
                        android:text="Hello User, Your balance is,"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/credit_Label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Loading..."
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="24dp"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:background="#E0FFFF"
        android:id="@+id/card_view2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#E0FFFF"
            android:gravity="center"
            android:layout_margin="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_Ride"
                android:layout_width="350dp"
                android:layout_height="200dp"
                app:cardElevation="50dp"
                app:cardBackgroundColor="#ff0006"
                app:cardCornerRadius="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Have a nice day user,"
                        android:fontFamily="@font/antic"
                        android:textSize="20sp"
                        android:layout_margin="20dp"
                        android:id="@+id/first_status"

                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/ride_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:text="Loading..."
                        android:textSize="24dp"
                        android:textColor="#fff"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFFBE6"
                android:elevation="8dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/buttonBill"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#FFFBE6"
                    android:src="@drawable/bill"
                    android:scaleType="fitCenter"/>



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFFBE6"
                android:elevation="8dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/buttonmeter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:backgroundTint="#FFFBE6"
                    android:src="@drawable/ic_person_24"
                    android:scaleType="fitCenter"/>



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FFFBE6"
                android:elevation="8dp"
                android:layout_margin="8dp">

                <ImageButton
                    android:id="@+id/contact"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="#FFFBE6"

                    android:src="@drawable/ic_admin_panel"
                    android:scaleType="fitCenter"/>



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#000000"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>